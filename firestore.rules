
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own documents.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Contacts can be created, read, updated, or deleted by the user who owns them.
    match /contacts/{contactId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Reminders can be created, read, updated, or deleted by the user who owns them.
    match /reminders/{reminderId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Allow users to create documents in the 'mail' collection to trigger emails.
    // The documents will be processed and deleted by the Trigger Email extension.
    match /mail/{mailId} {
      allow create: if request.auth != null;
    }
  }
}
